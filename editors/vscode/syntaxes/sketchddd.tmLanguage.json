{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "SketchDDD",
  "scopeName": "source.sketchddd",
  "patterns": [
    { "include": "#comments" },
    { "include": "#context" },
    { "include": "#map" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#operators" },
    { "include": "#annotations" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.sketchddd",
          "match": "//.*$"
        },
        {
          "name": "comment.block.sketchddd",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "context": {
      "patterns": [
        {
          "name": "meta.context.sketchddd",
          "begin": "\\b(context)\\s+([A-Z][a-zA-Z0-9]*)\\s*\\{",
          "beginCaptures": {
            "1": { "name": "keyword.control.context.sketchddd" },
            "2": { "name": "entity.name.type.context.sketchddd" }
          },
          "end": "\\}",
          "patterns": [
            { "include": "#comments" },
            { "include": "#entity" },
            { "include": "#value" },
            { "include": "#enum" },
            { "include": "#aggregate" },
            { "include": "#morphisms" },
            { "include": "#types" },
            { "include": "#strings" },
            { "include": "#operators" },
            { "include": "#annotations" }
          ]
        }
      ]
    },
    "entity": {
      "patterns": [
        {
          "name": "meta.entity.sketchddd",
          "begin": "\\b(entity)\\s+([A-Z][a-zA-Z0-9]*)\\s*\\{",
          "beginCaptures": {
            "1": { "name": "keyword.control.entity.sketchddd" },
            "2": { "name": "entity.name.type.entity.sketchddd" }
          },
          "end": "\\}",
          "patterns": [
            { "include": "#comments" },
            { "include": "#field" },
            { "include": "#types" }
          ]
        }
      ]
    },
    "value": {
      "patterns": [
        {
          "name": "meta.value.sketchddd",
          "begin": "\\b(value)\\s+([A-Z][a-zA-Z0-9]*)\\s*\\{",
          "beginCaptures": {
            "1": { "name": "keyword.control.value.sketchddd" },
            "2": { "name": "entity.name.type.value.sketchddd" }
          },
          "end": "\\}",
          "patterns": [
            { "include": "#comments" },
            { "include": "#field" },
            { "include": "#types" }
          ]
        }
      ]
    },
    "enum": {
      "patterns": [
        {
          "name": "meta.enum.inline.sketchddd",
          "match": "\\b(enum)\\s+([A-Z][a-zA-Z0-9]*)\\s*=\\s*(.+)$",
          "captures": {
            "1": { "name": "keyword.control.enum.sketchddd" },
            "2": { "name": "entity.name.type.enum.sketchddd" },
            "3": {
              "patterns": [
                {
                  "name": "variable.other.enummember.sketchddd",
                  "match": "[A-Z][a-zA-Z0-9]*"
                },
                {
                  "name": "keyword.operator.sketchddd",
                  "match": "\\|"
                }
              ]
            }
          }
        },
        {
          "name": "meta.enum.block.sketchddd",
          "begin": "\\b(enum)\\s+([A-Z][a-zA-Z0-9]*)\\s*\\{",
          "beginCaptures": {
            "1": { "name": "keyword.control.enum.sketchddd" },
            "2": { "name": "entity.name.type.enum.sketchddd" }
          },
          "end": "\\}",
          "patterns": [
            { "include": "#comments" },
            { "include": "#enum-variant" },
            { "include": "#types" }
          ]
        }
      ]
    },
    "enum-variant": {
      "patterns": [
        {
          "name": "meta.enum-variant.sketchddd",
          "begin": "([A-Z][a-zA-Z0-9]*)\\s*\\{",
          "beginCaptures": {
            "1": { "name": "variable.other.enummember.sketchddd" }
          },
          "end": "\\}",
          "patterns": [
            { "include": "#comments" },
            { "include": "#field" },
            { "include": "#types" }
          ]
        },
        {
          "name": "variable.other.enummember.sketchddd",
          "match": "\\b([A-Z][a-zA-Z0-9]*)\\b"
        }
      ]
    },
    "aggregate": {
      "patterns": [
        {
          "name": "meta.aggregate.sketchddd",
          "begin": "\\b(aggregate)\\s+([A-Z][a-zA-Z0-9]*)\\s*\\{",
          "beginCaptures": {
            "1": { "name": "keyword.control.aggregate.sketchddd" },
            "2": { "name": "entity.name.type.aggregate.sketchddd" }
          },
          "end": "\\}",
          "patterns": [
            { "include": "#comments" },
            { "include": "#aggregate-keywords" },
            { "include": "#types" },
            { "include": "#operators" }
          ]
        }
      ]
    },
    "aggregate-keywords": {
      "patterns": [
        {
          "name": "keyword.other.root.sketchddd",
          "match": "\\b(root|contains|invariant)\\b"
        }
      ]
    },
    "morphisms": {
      "patterns": [
        {
          "name": "meta.morphisms.sketchddd",
          "begin": "\\b(morphisms)\\s*\\{",
          "beginCaptures": {
            "1": { "name": "keyword.control.morphisms.sketchddd" }
          },
          "end": "\\}",
          "patterns": [
            { "include": "#comments" },
            { "include": "#morphism" },
            { "include": "#annotations" }
          ]
        }
      ]
    },
    "morphism": {
      "patterns": [
        {
          "name": "meta.morphism.sketchddd",
          "match": "([a-z][a-zA-Z0-9]*)\\s*:\\s*([A-Z][a-zA-Z0-9]*)\\s*(->)\\s*([A-Z][a-zA-Z0-9<>,\\s]*)",
          "captures": {
            "1": { "name": "entity.name.function.morphism.sketchddd" },
            "2": { "name": "entity.name.type.sketchddd" },
            "3": { "name": "keyword.operator.arrow.sketchddd" },
            "4": { "name": "entity.name.type.sketchddd" }
          }
        }
      ]
    },
    "map": {
      "patterns": [
        {
          "name": "meta.map.sketchddd",
          "begin": "\\b(map)\\s+([A-Z][a-zA-Z0-9]*)\\s*:\\s*([A-Z][a-zA-Z0-9]*)\\s*(->)\\s*([A-Z][a-zA-Z0-9]*)\\s*\\{",
          "beginCaptures": {
            "1": { "name": "keyword.control.map.sketchddd" },
            "2": { "name": "entity.name.type.map.sketchddd" },
            "3": { "name": "entity.name.type.context.sketchddd" },
            "4": { "name": "keyword.operator.arrow.sketchddd" },
            "5": { "name": "entity.name.type.context.sketchddd" }
          },
          "end": "\\}",
          "patterns": [
            { "include": "#comments" },
            { "include": "#map-keywords" },
            { "include": "#mappings" },
            { "include": "#types" }
          ]
        }
      ]
    },
    "map-keywords": {
      "patterns": [
        {
          "name": "keyword.other.pattern.sketchddd",
          "match": "\\b(pattern)\\b"
        },
        {
          "name": "constant.language.pattern.sketchddd",
          "match": "\\b(CustomerSupplier|AntiCorruptionLayer|OpenHostService|Conformist|SharedKernel|Partnership)\\b"
        }
      ]
    },
    "mappings": {
      "patterns": [
        {
          "name": "meta.mappings.sketchddd",
          "begin": "\\b(mappings)\\s*\\{",
          "beginCaptures": {
            "1": { "name": "keyword.control.mappings.sketchddd" }
          },
          "end": "\\}",
          "patterns": [
            { "include": "#comments" },
            { "include": "#mapping" }
          ]
        }
      ]
    },
    "mapping": {
      "patterns": [
        {
          "name": "meta.mapping.sketchddd",
          "match": "([A-Z][a-zA-Z0-9]*)\\s*(->)\\s*([A-Z][a-zA-Z0-9]*)",
          "captures": {
            "1": { "name": "entity.name.type.sketchddd" },
            "2": { "name": "keyword.operator.arrow.sketchddd" },
            "3": { "name": "entity.name.type.sketchddd" }
          }
        }
      ]
    },
    "field": {
      "patterns": [
        {
          "name": "meta.field.sketchddd",
          "match": "([a-z][a-zA-Z0-9_]*)\\s*:\\s*([A-Z][a-zA-Z0-9<>,\\s?]*)",
          "captures": {
            "1": { "name": "variable.other.property.sketchddd" },
            "2": {
              "patterns": [
                { "include": "#types" }
              ]
            }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.sketchddd",
          "match": "\\b(context|entity|value|enum|aggregate|morphisms|map|pattern|mappings|root|contains|invariant)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.sketchddd",
          "match": "\\b(String|Int|Float|Bool|UUID|DateTime|Date|Decimal|Email)\\b"
        },
        {
          "name": "support.type.generic.sketchddd",
          "match": "\\b(List|Map|Set)\\b"
        },
        {
          "name": "keyword.operator.optional.sketchddd",
          "match": "\\?"
        },
        {
          "name": "entity.name.type.sketchddd",
          "match": "\\b([A-Z][a-zA-Z0-9]*)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.sketchddd",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.sketchddd",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.sketchddd",
          "match": "\\b[0-9]+\\.[0-9]+\\b"
        },
        {
          "name": "constant.numeric.integer.sketchddd",
          "match": "\\b[0-9]+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arrow.sketchddd",
          "match": "->"
        },
        {
          "name": "keyword.operator.fat-arrow.sketchddd",
          "match": "=>"
        },
        {
          "name": "keyword.operator.assignment.sketchddd",
          "match": "="
        },
        {
          "name": "keyword.operator.pipe.sketchddd",
          "match": "\\|"
        },
        {
          "name": "keyword.operator.comparison.sketchddd",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.arithmetic.sketchddd",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.logical.sketchddd",
          "match": "(&&|\\|\\||!)"
        }
      ]
    },
    "annotations": {
      "patterns": [
        {
          "name": "meta.annotation.sketchddd",
          "match": "@([a-zA-Z][a-zA-Z0-9]*)(\\([^)]*\\))?",
          "captures": {
            "1": { "name": "entity.name.tag.annotation.sketchddd" },
            "2": { "name": "meta.annotation.parameters.sketchddd" }
          }
        }
      ]
    }
  }
}
